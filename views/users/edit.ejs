<!DOCTYPE html>
<html>
  <head>
    <%- include('./../partials/head') %>
    <%- include('./../partials/usersnav') %>
    <meta charset="utf-8">
    <title></title>
  </head>
<body>
<h2>Edit User Profile</h2>

<% if (message.length > 0) { %>
  <div class="alert alert-danger"><%= message %></div>
<% } %>

<form method="post" action="/users/<%= user.id %>">
  <input type="hidden" name="_method" value="PATCH">
  <div class="form-group">
    <label for="username">Username</label>
    <input class="form-control" type="text" name="username" id="username">
  </div>

  <div class="form-group">
    <label for="email">Email</label>
    <input class="form-control" type="text" name="email" id="email">
  </div>

  <!-- <div class="form-group">
    <label for="password">Password</label>
    <input class="form-control" type="password" name="password" id="password">
  </div> -->

  <div class="form-group">
    <label for="address">Street Address</label>
    <input class="form-control" type="text" name="address" id="address">
  </div>

  <div class="form-group">
    <label for="city">City</label>
    <input class="form-control" type="text" name="city" id="city">
  </div>

  <div class="form-group">
    <label for="state">State</label>
    <input class="form-control" type="text" name="state" id="state">
  </div>

  <div class="form-group">
    <label for="zip">Zip</label>
    <input class="form-control" type="text" name="zip" id="zip">
  </div>

  <div class="form-group">
    <label for="party">County</label>
    <input class="form-control" type="text" name="county" id="county">
  </div>

  <div class="form-group">
    <label for="party">Party</label>
    <input class="form-control" type="text" name="party" id="party">
  </div>

  <input class="btn btn-default" type="submit">
</form>
<br>
<form method="post" action="/users/<%= user.id %>">
    <div>
        <input type="hidden" name="_method" value="DELETE">
        <button class="btn btn-default" type="submit">DELETE ACCOUNT</button>
    </div>
</form>

</body>
